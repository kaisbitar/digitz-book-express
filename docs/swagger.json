{
    "openapi": "3.0.0",
    "info": {
        "title": "Digitz Book API",
        "version": "1.0.0"
    },
    "paths": {
        "/services/create": {
            "post": {
                "summary": "Create files",
                "description": "Creates files for the API. - This will take a FEW MINUTES",
                "responses": {
                    "201": {
                        "description": "Files created successfully."
                    },
                    "500": {
                        "description": "Error during file creation."
                    }
                }
            }
        },
        "/services/create-word-roots": {
            "post": {
                "summary": "Create wordRoots.json file",
                "description": "Creates the wordRoots.json deliverable file from the processed word roots data.",
                "responses": {
                    "201": {
                        "description": "wordRoots.json created successfully."
                    },
                    "500": {
                        "description": "Error during wordRoots file creation."
                    }
                }
            }
        },
        "/api/quran-model": {
            "get": {
                "summary": "Get Quran model",
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/quran-index": {
            "get": {
                "summary": "Get Quran index",
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/with-tashkeel": {
            "get": {
                "summary": "Get Quran with Tashkeel",
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/view/sura-details/{fileName}": {
            "get": {
                "summary": "Get details of a specific Sura",
                "parameters": [
                    {
                        "name": "fileName",
                        "in": "path",
                        "required": true,
                        "description": "Name of the Sura file",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/scrape/{word}": {
            "get": {
                "summary": "Scrape a website to get a word meaning",
                "parameters": [
                    {
                        "name": "word",
                        "in": "path",
                        "required": true,
                        "description": "Website to scrape",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/roots-and-derivatives": {
            "get": {
                "summary": "Get roots and their derivatives",
                "description": "Returns the roots and their derivatives as JSON.",
                "responses": {
                    "200": {
                        "description": "A JSON file with roots and their derivatives.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "word": {
                                                "type": "string",
                                                "description": "The root word"
                                            },
                                            "derivatives": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                },
                                                "description": "List of derivatives found in the verses"
                                            },
                                            "count": {
                                                "type": "integer",
                                                "description": "Number of occurrences of the root word"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}